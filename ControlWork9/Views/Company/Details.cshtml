@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer loc
@model ControlWork9.Models.Company

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @loc["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (ViewBag.Balance != null)
        {
            <dt class="col-sm-2">
                @loc["Balance"]
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Balance
            </dd>
        }
    </dl>
</div>

